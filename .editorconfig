root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120

[*.json]
indent_size = 2
insert_final_newline = false

[*.yml]
indent_size = 2

[*.{ts,tsx}]
ij_typescript_use_public_modifier = true
ij_typescript_jsdoc_include_types = true
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = false
ij_typescript_prefer_explicit_types_function_returns = true
ij_typescript_imports_wrap = normal

[*.{js,jsx}]
ij_javascript_force_quote_style = true
ij_javascript_use_double_quotes = false

[*.sass]
indent_size = 2
ij_sass_enforce_quotes_on_format = true
ij_sass_use_double_quotes = false

[*.scss]
indent_size = 2
ij_scss_enforce_quotes_on_format = true
ij_scss_use_double_quotes = false
